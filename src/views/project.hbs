<div class="d-flex justify-content-center">
<h1 class="">My Project</h1>
</div>
            {{#if messages.success}}
            <div class="alert alert-success" role="alert">
                <div class="container">
                    {{messages.success}}
                </div>
            </div>
            {{/if}}
            {{#if isLogin}}
            <div class="d-flex justify-content-end px-5">
            <a href="/addProject" class="btn btn-success btn-lg">Add Project</a>
            </div>
            <div class="container">
            <div class="row hidden-md-up">
            {{#each data}}
                            <div class="col-md-4 mt-3" >
                    <div class="card  p-2 bd-highlight" style="width: 22rem;">
                    <img src="/uploads/{{this.image}}" class="card-img-top">    
                    <div class="card-body">
                        <h5 class="card-title"><a class="text-decoration-none text-black m-0 p-0" href="/projectDetail/{{this.id}}"
                                    target="_blank">{{this.name}} </a></h5>
                         <div class="m-0 p-0 mt-2" style="font-size: 14px;">
                                Start Date: {{this.startDate}} | End Date: {{this.endDate}}
                            </div>
                             <p class="mt-1 card-text"><small clanpss="text-body-secondary">Durasi :
                                    {{this.distance_date}}
                                </small></p>
                                <div >
                             <p class="card-text">{{this.description}}<br></p>
                                </div>
                            {{#if this.node}}
                            <i class="mt-5 me-2 "><i class="fa-brands fa-node fa-2xl"></i></i>
                            {{/if}}
                            {{#if this.react}}
                            <i class="mt-5 me-2"><i class="fa-brands fa-react fa-2xl"></i></i>
                            {{/if}}
                            {{#if this.golang}}
                            <i class="mt-5 me-2"><i class="fa-brands fa-golang fa-2xl"></i></i>
                            {{/if}}
                            {{#if this.js}}
                            <i class="mt-5 me-2 "><i class="fa-brands fa-js fa-2xl"></i></i>
                            {{/if}}
                    <p class="card-text text-truncate mb-2 mt-2"> Author : {{ this.author }} </p>

                        <div class="d-flex justify-content-end">
                        <a href="/editProject/{{this.id}}" class="btn btn-primary mx-2"> Edit </a>
                          <a class="btn btn-primary modal-delete" data-bs-toggle="modal"
                                    data-bs-target="#deleteProjectModal" data-id="{{this.id}}">Delete</a>
                         <div class="modal fade" id="deleteProjectModal" 
                                    aria-labelledby="deleteProjectModal" aria-  hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="deleteProjectModal">Delete Project
                                                </h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Are you want to delete this project?</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-bs-dismiss="modal">Cancel</button>
                                                <a id="confirmDelete" class="btn btn-danger" href="#">Delete</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
                            </div>
            {{/each}}
            </div>
            </div>
            {{else}}
           <div class="container">
            <div class="row hidden-md-up">
            {{#each dataa}}
                <div class="col-md-4 mt-3">
                    <div class="card  p-2 bd-highlight" style="width: 22rem;">
                    <img src="/uploads/{{this.image}}" class="card-img-top">
                    <div class="card-body">
                       <h5 class="card-title"><a class="text-decoration-none text-black m-0 p-0" href="/projectDetail/{{this.id}}"
                                    target="_blank">{{this.name}} </a></h5>
                         <div class="m-0 p-0 " style="font-size: 14px;">
                                Start Date: {{this.startDate}} | End Date: {{this.endDate}}
                            </div>
                             <p class=" card-text"><small clanpss="text-body-secondary"> Durasi :
                                    {{this.distance_date}}
                                </small></p>
                             <p class="card-text">Desc : {{this.description }}</p>
                            {{#if this.node}}
                            <i class="mt-5 me-2 "><i class="fa-brands fa-node fa-2xl"></i></i>
                            {{/if}}
                            {{#if this.react}}
                            <i class="mt-5 me-2"><i class="fa-brands fa-react fa-2xl"></i></i>
                            {{/if}}
                            {{#if this.golang}}
                            <i class="mt-5 me-2"><i class="fa-brands fa-golang fa-2xl"></i></i>
                            {{/if}}
                            {{#if this.nextjs}}
                            <i class="mt-5 me-2 "><i class="fa-brands fa-js fa-2xl"></i></i>
                            {{/if}}
                    <p class="card-text text-truncate mb-2 mt-2"> Author : {{ this.author }} </p>
                    </div>
                </div>
                </div>
            {{/each}}
            </div>
            </div>      
            {{/if}}
   <script src="assets/js/hamburger.js"></script>
       <script>
        document.querySelectorAll('.modal-delete').forEach(function (element) {
            element.addEventListener('click', function () {
                let dataId = element.getAttribute('data-id');
                document.getElementById('deleteProjectModal').style.display = 'block';
                let projectId = dataId;
                document.getElementById('confirmDelete').setAttribute('href', '/delete-project/' + projectId);
            });
        });
    </script>
