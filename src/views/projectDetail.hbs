<html>

<head>
    <title>Project Detail</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="../assets/css/style.css">
    <link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>
    <script src="https://kit.fontawesome.com/77b392a698.js" crossorigin="anonymous"></script>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-body-secondary pt-3">
        <div class="container-fluid navbar-collapse">
            <img src="../assets/img/logo.png" alt="logo-dumbways" style="width: 50px;" class="ms-3 me-5">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/"><span class="fs-5">Home</span></a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" aria-current="page" href="project"><span class="fs-5">Project</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="testimonial"><span class="fs-5">Testimonial</span></a>
                    </li>
                </ul>
                <div class="d-flex">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        {{#if isLogin}}
                        <li class="nav-item">
                            <a class="nav-link fw-bold active text-danger">Hello,
                            {{user}}</a>
                        </li>
                        <li class="nav-item ms-3 me-4">
                            <a class="nav-link" href="/logout">Logout</a>
                        </li>
                        {{else}}
                        <li class="nav-item">
                            <a class="nav-link me-3" aria-current="page" href="/login"><span class="fs-5">Login</span></a>
                        </li>
                        <li class="nav-item me-3">
                            <a class="nav-link" aria-current="page" href="/register"><span class="fs-5">Register</span> </a>
                        </li>
                        {{/if}}
                        <li class="nav-item me  -3">
                            <a class="btn btn-secondary me-3 btn-lg" href="contact-me" role="button">Contact Me</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- Navbar -->
    <div class="container-fluid d-flex flex-column min-vh-100" style="background-color: rgb(227,231,235);">
        <div class="project-detail">
            <div class="project-detail-container mt-5 mb-5">
                <h1 class="text-center">{{data.name}}</h1>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <img src="/uploads/{{data.image}}" class="img-fluid">
                    </div>
                    <div class="col-md-6">
                        <h3>Duration</h3>
                        <div class="mb-3">
                            <i class="fa-solid fa-calculator"></i>
                            <small class="">{{data.startDate}} - {{data.endDate}}</small>
                        </div>
                        <div class="mb-3">
                            <i class="fa-regular fa-clock"></i>
                            <small class="">{{data.distance_date}}</small>
                        </div>
                        <h3>Technologies</h3>
                        <div class="mb-2 mt-3">
                            {{#if data.node}}
                            <i class="mt-5 me-2 "><i class="fa-brands fa-node fa-2xl"></i></i>
                            <small class="">React JS</small>
                            {{/if}}
                            {{#if data.react}}
                            <i class="mt-5 me-2"><i class="fa-brands fa-react fa-2xl"></i></i>
                            <small class="">React JS</small>
                            {{/if}}
                            {{#if data.golang}}
                            <i class="mt-5 me-2"><i class="fa-brands fa-golang fa-2xl"></i></i>
                            <small class="">Golang</small>
                            {{/if}}
                            {{#if data.nextjs}}
                            <i class="mt-5 me-2 "><i class="fa-brands fa-js fa-2xl"></i></i>
                            <small class="">Javascript</small>
                            {{/if}}
                        </div>
                    </div>
                </div>
                <div class="description mt-5">
                    <p style="text-align: justify;">
                        Description : {{data.description}}
                    </p>
                </div>
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>